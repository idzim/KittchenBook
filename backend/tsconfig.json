{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "moduleResolution": "node",
    "lib": ["es6", "es5", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,  
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist", 
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
